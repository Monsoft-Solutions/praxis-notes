{
  "name": "@monsoft/praxis-notes",
  "description": "The ABA therapy note-generation app",
  "author": "Monsoft Solutions",
  "private": true,

  "scripts": {
    "prepare": "husky",
    "check:praxis-notes-app": "cd praxis-notes-app && npm run check",
    "check": "npm run check:praxis-notes-app",
    "pre-commit": "git stash -q --keep-index && (npm run check || (git stash pop -q && exit 1)) && git stash pop -q"
  },
  
  "dependencies": {
    "husky": "^9.1.7"
  },
  
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.4.2"
  },

  "packageManager": "npm@10.9.2",
  
  "workspaces": [
    "praxis-notes-app",
    "packages/*"  
  ]
}
